<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <logger name="org.springframework.web" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.springframework.security" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="org.springframework.web" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="org.springframework.security" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
<!-- 	<logger name="com.msa.console" level="DEBUG"></logger>
	<logger name="com.msa.console" level="error"></logger> -->
	<logger name="com.msa.console" level="INFO"></logger>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>